<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anthonybennis.homeheatingcosttracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.anthonybennis.homeheatingcosttracker.MainContentFullScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.anthonybennis.homeheatingcosttracker.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.anthonybennis.homeheatingcosttracker.MainContentFullScreenActivity" />
        <!-- created by Anthony at 2014-02-09 22:45:14 -->
        <activity android:name="com.anthonybennis.homeheatingcosttracker.Calculator" />
        <activity
            android:name="com.anthonybennis.homeheatingcosttracker.CalculatorActivity"
            android:label="@string/title_activity_calculator"
            android:parentActivityName="com.anthonybennis.homeheatingcosttracker.MainContentFullScreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anthonybennis.homeheatingcosttracker.MainContentFullScreenActivity" />
        </activity>
    </application>

</manifest>
